<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="bottom"
    app:umanoOverlay="false"
    app:umanoPanelHeight="0dp"
    tools:context=".MainActivity"
    android:id="@+id/slidePanel">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <TableLayout
                android:id="@+id/table_exchangeRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                app:layout_constraintTop_toTopOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_title"
                        android:gravity="center"
                        android:text="환율"
                        android:textSize="@dimen/page_title_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_title"
                        android:gravity="center"
                        android:text="2022.11.03 14:00(KST) 기준"
                        android:textSize="@dimen/small_text_size" />

                    <TextView
                        android:id="@+id/tv_standard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_title"
                        android:gravity="center"
                        android:text=""
                        android:textSize="@dimen/small_text_size" />
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_title"
                        android:gravity="center"
                        android:text="통화"
                        android:textSize="@dimen/middle_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_title"
                        android:gravity="center"
                        android:text="매매기준율"
                        android:textStyle="bold"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_title"
                        android:gravity="center"
                        android:text=""
                        android:textSize="@dimen/middle_text_size"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_USD"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside_currency"
                        android:gravity="center"
                        android:text="USD"
                        android:textSize="@dimen/middle_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_price_USD"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside_light"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:id="@+id/tv_show_chart_USD"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside_light"
                        android:gravity="center"
                        android:text="차트 보기"
                        android:textColor="@color/black"
                        android:textSize="@dimen/middle_text_size" />
                </TableRow>

                <TableRow
                    android:id="@+id/tr_EUR"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside_currency"
                        android:gravity="center"
                        android:text="EUR"
                        android:textSize="@dimen/middle_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_price_EUR"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside_light"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:id="@+id/tv_show_chart_EUR"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside_light"
                        android:gravity="center"
                        android:text="차트 보기"
                        android:textColor="@color/black"
                        android:textSize="@dimen/middle_text_size" />
                </TableRow>

                <TableRow
                    android:id="@+id/tr_JPY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside_currency"
                        android:gravity="center"
                        android:text="JPY(100엔)"
                        android:textSize="@dimen/middle_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_price_JPY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside_light"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/middle_text_size" />

                    <TextView
                        android:id="@+id/tv_show_chart_JPY"
                        android:layout_width="match_parent"
