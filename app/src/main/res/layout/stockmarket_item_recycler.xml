<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:id="@+id/tl_stockmarket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:stretchColumns="*">
    <TableRow>
        <TextView
            android:id="@+id/tv_name_s"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/table_inside_currency"
            android:gravity="center"
            android:text="KOSPI"
            android:textSize="@dimen/middle_text_size"
            android:textStyle="bold"
            android:layout_weight="2"/>
        <TextView
            android:id="@+id/tv_now_s"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/table_inside_light"
            android:gravity="center"
            android:text="2500.0원"
            android:textColor="@color/red"
            android:textSize="@dimen/middle_text_size"
            android:layout_weight="3"/>
        <TextView
            android:id="@+id/tv_updown_s"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/table_inside_light"
            android:gravity="center"
            android:text="▴ 80.00 / +3.00%"
            android:textColor="@color/red"
            android:textSize="@dimen/middle_text_size"
            android:layout_weight="3"/>
    </TableRow>

</TableLayout>